@using Vidly.Models
@model Vidly.ViewModels.RandomMovieViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Customer</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customers</th>
            </tr>
        </thead>
        @displayTable()
    </table>
</div>


<!--List of functions-->
@helper displayTable()
{
    foreach (Customer c in Model.Customers)
    {
        <thead>
            <tr>
                <td scope="col">@c.ID</td>
                <td scope="col">@c.Name</td>
            </tr>
        </thead>

    }


}